<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/vertical10percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical90percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/EditIllness_editIllness"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/vertical90percent"
        app:layout_constraintStart_toStartOf="@+id/vertical10percent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextIllnessEnterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/EditIllness_enterName"
        android:inputType="text"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewIllnessName"
        app:layout_constraintEnd_toStartOf="@+id/vertical90percent"
        app:layout_constraintTop_toTopOf="@+id/textViewIllnessName" />

    <TextView
        android:id="@+id/textViewIllnessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="120dp"
        android:text="@string/EditIllness_illnessName"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/editTextIllnessEnterName"
        app:layout_constraintStart_toStartOf="@+id/vertical10percent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/EditIllnessAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:onClick="clickAddIllnessButton"
        android:text="@string/EditIllness_AddButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical10percent" />

    <Button
        android:id="@+id/EditIllnessCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="78dp"
        android:onClick="clickEditIllnessCancelButton"
        android:text="@string/EditIllness_cancelButton"
        app:layout_constraintBottom_toBottomOf="@+id/EditIllnessAddButton"
        app:layout_constraintEnd_toStartOf="@+id/vertical90percent"
        app:layout_constraintStart_toEndOf="@+id/EditIllnessAddButton"
        app:layout_constraintTop_toTopOf="@+id/EditIllnessAddButton" />

    <Button
        android:id="@+id/EditIllnessAddNotesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:onClick="onAddNotesButton"
        android:text="Add Notes"
        app:layout_constraintBottom_toTopOf="@+id/EditIllnessCancelButton"
        app:layout_constraintEnd_toStartOf="@+id/vertical90percent"
        app:layout_constraintStart_toStartOf="@+id/vertical10percent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIllnessEnterName" />

</android.support.constraint.ConstraintLayout>