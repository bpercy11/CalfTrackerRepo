<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brett.calftracker.EditVaccineActivity">

    <android.support.constraint.Guideline
        android:id="@+id/vertical10percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="39dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical90percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="346dp" />

    <TextView
        android:id="@+id/editVaccine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/edit_vaccine"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewVaccineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/vaccine_name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/vertical10percent"
        app:layout_constraintTop_toBottomOf="@+id/editVaccine" />

    <EditText
        android:id="@+id/editTextVaccineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_vaccine"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/textViewVaccineName"
        app:layout_constraintEnd_toStartOf="@+id/vertical90percent"
        app:layout_constraintTop_toTopOf="@+id/textViewVaccineName"
        app:layout_constraintVertical_bias="0.526" />

    <TextView
        android:id="@+id/textViewVaccineRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Vaccine Range"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textViewVaccineName"
        app:layout_constraintTop_toBottomOf="@+id/textViewVaccineName" />

    <TextView
        android:id="@+id/textViewAdminDateStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/administration_start"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textViewVaccineName"
        app:layout_constraintTop_toBottomOf="@+id/textViewVaccineRange" />

    <EditText
        android:id="@+id/editTextAdminDateStart"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/administration_hint_start"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAdminDateStart"
        app:layout_constraintStart_toEndOf="@+id/textViewAdminDateStart"
        app:layout_constraintTop_toTopOf="@+id/textViewAdminDateStart"
        app:layout_constraintVertical_bias="0.296" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:entries="@array/vacc_range_spinner"
        app:layout_constraintBottom_toBottomOf="@+id/editTextAdminDateStart"
        app:layout_constraintEnd_toEndOf="@+id/editTextVaccineName"
        app:layout_constraintStart_toEndOf="@+id/editTextAdminDateStart"
        app:layout_constraintTop_toTopOf="@+id/editTextAdminDateStart"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/textViewAdminDateEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/administration_end"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textViewVaccineName"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminDateStart" />

    <EditText
        android:id="@+id/editTextAdminDateEnd"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/administration_hint_end"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAdminDateEnd"
        app:layout_constraintStart_toEndOf="@+id/textViewAdminDateEnd"
        app:layout_constraintTop_toTopOf="@+id/textViewAdminDateEnd"
        app:layout_constraintVertical_bias="0.148" />


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:entries="@array/vacc_range_spinner"
        app:layout_constraintBottom_toBottomOf="@+id/editTextAdminDateEnd"
        app:layout_constraintEnd_toEndOf="@+id/editTextVaccineName"
        app:layout_constraintStart_toEndOf="@+id/editTextAdminDateEnd"
        app:layout_constraintTop_toTopOf="@+id/editTextAdminDateEnd" />

    <TextView
        android:id="@+id/textViewVaccineDosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/vaccine_dosage"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textViewVaccineName"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminDateEnd" />

    <EditText
        android:id="@+id/editTextVaccineDosage"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:hint="@string/enter_vaccine_dosage"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewVaccineDosage"
        app:layout_constraintEnd_toEndOf="@+id/editTextVaccineName"
        app:layout_constraintStart_toEndOf="@+id/textViewVaccineDosage"
        app:layout_constraintTop_toTopOf="@+id/textViewVaccineDosage"
        app:layout_constraintVertical_bias="0.241" />

    <TextView
        android:id="@+id/textViewDosageUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/dosage_units_vaccine"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textViewVaccineName"
        app:layout_constraintTop_toBottomOf="@+id/textViewVaccineDosage" />

    <EditText
        android:id="@+id/editTextDosageUnits"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/enter_units_vaccine"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDosageUnits"
        app:layout_constraintEnd_toEndOf="@+id/editTextVaccineName"
        app:layout_constraintStart_toEndOf="@+id/textViewDosageUnits"
        app:layout_constraintTop_toTopOf="@+id/textViewDosageUnits" />

    <TextView
        android:id="@+id/textViewAdminMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/admin_method_vaccine"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textViewVaccineName"
        app:layout_constraintTop_toBottomOf="@+id/textViewDosageUnits" />

    <EditText
        android:id="@+id/editTextVaccineAdminMethod"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/enter_admin_method_vaccine"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAdminMethod"
        app:layout_constraintEnd_toEndOf="@+id/editTextVaccineName"
        app:layout_constraintStart_toEndOf="@+id/textViewAdminMethod"
        app:layout_constraintTop_toTopOf="@+id/textViewAdminMethod"
        app:layout_constraintVertical_bias="0.551" />

    <Button
        android:id="@+id/buttonAddVaccine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:onClick="clickAddVaccineButton"
        android:text="ADD"
        app:layout_constraintStart_toStartOf="@+id/textViewVaccineName"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminMethod" />

    <Button
        android:id="@+id/buttonVaccineCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:onClick="clickCancelVaccineButton"
        android:text="@string/cancel_button"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAddVaccine"
        app:layout_constraintEnd_toEndOf="@+id/editTextVaccineName"
        app:layout_constraintTop_toTopOf="@+id/buttonAddVaccine" />


</android.support.constraint.ConstraintLayout>
