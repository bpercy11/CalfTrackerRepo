<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brett.calftracker.EditVaccineActivity">

    <android.support.constraint.Guideline
        android:id="@+id/vertical10percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="39dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical90percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="346dp" />

    <TextView
        android:id="@+id/edit_vaccine_editVaccine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/edit_vaccine_edit_vaccine"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edit_vaccine_textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/edit_vaccine_vaccine_name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/vertical10percent"
        app:layout_constraintTop_toBottomOf="@+id/edit_vaccine_editVaccine" />

    <EditText
        android:id="@+id/edit_vaccine_editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edit_vaccine_enter_vaccine"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintEnd_toStartOf="@+id/vertical90percent"
        app:layout_constraintTop_toTopOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintVertical_bias="0.526" />

    <TextView
        android:id="@+id/edit_vaccine_textViewRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Vaccine Range"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintTop_toBottomOf="@+id/edit_vaccine_textViewName" />

    <TextView
        android:id="@+id/edit_vaccine_textViewAdminDateStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/edit_vaccine_administration_start"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintTop_toBottomOf="@+id/edit_vaccine_textViewRange" />

    <EditText
        android:id="@+id/edit_vaccine_editTextAdminDateStart"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/edit_vaccine_administration_hint_start"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/edit_vaccine_textViewAdminDateStart"
        app:layout_constraintStart_toEndOf="@+id/edit_vaccine_textViewAdminDateStart"
        app:layout_constraintTop_toTopOf="@+id/edit_vaccine_textViewAdminDateStart"
        app:layout_constraintVertical_bias="0.296" />

    <Spinner
        android:id="@+id/edit_vaccine_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:entries="@array/vacc_range_spinner"
        app:layout_constraintBottom_toBottomOf="@+id/edit_vaccine_editTextAdminDateStart"
        app:layout_constraintEnd_toEndOf="@+id/edit_vaccine_editTextName"
        app:layout_constraintStart_toEndOf="@+id/edit_vaccine_editTextAdminDateStart"
        app:layout_constraintTop_toTopOf="@+id/edit_vaccine_editTextAdminDateStart"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/edit_vaccine_textViewAdminDateEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/edit_vaccine_administration_end"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintTop_toBottomOf="@+id/edit_vaccine_textViewAdminDateStart" />

    <EditText
        android:id="@+id/edit_vaccine_editTextAdminDateEnd"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/edit_vaccine_administration_hint_end"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/edit_vaccine_textViewAdminDateEnd"
        app:layout_constraintStart_toEndOf="@+id/edit_vaccine_textViewAdminDateEnd"
        app:layout_constraintTop_toTopOf="@+id/edit_vaccine_textViewAdminDateEnd"
        app:layout_constraintVertical_bias="0.148" />


    <Spinner
        android:id="@+id/edit_vaccine_spinner1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:entries="@array/vacc_range_spinner"
        app:layout_constraintBottom_toBottomOf="@+id/edit_vaccine_editTextAdminDateEnd"
        app:layout_constraintEnd_toEndOf="@+id/edit_vaccine_editTextName"
        app:layout_constraintStart_toEndOf="@+id/edit_vaccine_editTextAdminDateEnd"
        app:layout_constraintTop_toTopOf="@+id/edit_vaccine_editTextAdminDateEnd" />

    <TextView
        android:id="@+id/edit_vaccine_textViewDosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/edit_vaccine_vaccine_dosage"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintTop_toBottomOf="@+id/edit_vaccine_textViewAdminDateEnd" />

    <EditText
        android:id="@+id/edit_vaccine_editTextDosage"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:hint="@string/edit_vaccine_enter_vaccine_dosage"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_vaccine_textViewDosage"
        app:layout_constraintEnd_toEndOf="@+id/edit_vaccine_editTextName"
        app:layout_constraintStart_toEndOf="@+id/edit_vaccine_textViewDosage"
        app:layout_constraintTop_toTopOf="@+id/edit_vaccine_textViewDosage"
        app:layout_constraintVertical_bias="0.241" />

    <TextView
        android:id="@+id/edit_vaccine_textViewDosageUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/edit_vaccine_dosage_units"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintTop_toBottomOf="@+id/edit_vaccine_textViewDosage" />

    <EditText
        android:id="@+id/edit_vaccine_editTextDosageUnits"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/edit_vaccine_enter_units"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_vaccine_textViewDosageUnits"
        app:layout_constraintEnd_toEndOf="@+id/edit_vaccine_editTextName"
        app:layout_constraintStart_toEndOf="@+id/edit_vaccine_textViewDosageUnits"
        app:layout_constraintTop_toTopOf="@+id/edit_vaccine_textViewDosageUnits" />

    <TextView
        android:id="@+id/edit_vaccine_textViewAdminMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/edit_vaccine_admin_method"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintTop_toBottomOf="@+id/edit_vaccine_textViewDosageUnits" />

    <EditText
        android:id="@+id/edit_vaccine_editTextAdminMethod"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/edit_vaccine_enter_admin_method"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_vaccine_textViewAdminMethod"
        app:layout_constraintEnd_toEndOf="@+id/edit_vaccine_editTextName"
        app:layout_constraintStart_toEndOf="@+id/edit_vaccine_textViewAdminMethod"
        app:layout_constraintTop_toTopOf="@+id/edit_vaccine_textViewAdminMethod"
        app:layout_constraintVertical_bias="0.551" />

    <Button
        android:id="@+id/buttonAddVaccine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:onClick="clickAddVaccineButton"
        android:text="ADD"
        app:layout_constraintStart_toStartOf="@+id/edit_vaccine_textViewName"
        app:layout_constraintTop_toBottomOf="@+id/edit_vaccine_textViewAdminMethod" />

    <Button
        android:id="@+id/buttonVaccineCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:onClick="clickCancelVaccineButton"
        android:text="@string/cancel_button"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAddVaccine"
        app:layout_constraintEnd_toEndOf="@+id/edit_vaccine_editTextName"
        app:layout_constraintTop_toTopOf="@+id/buttonAddVaccine" />


</android.support.constraint.ConstraintLayout>
