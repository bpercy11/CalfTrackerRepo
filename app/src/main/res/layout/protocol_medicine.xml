<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/vaccineButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Vaccine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/medicineButton"
        tools:layout_editor_absoluteY="44dp" />

    <Button
        android:id="@+id/medicineButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Medicine"
        tools:layout_editor_absoluteY="44dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vaccineButton" />

    <TableLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="118dp">

        <TableRow
            <TextView android:text="Name"
            android:layout_width="101dp"
            android:layout_column="0"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

            <TextView android:text="Medicine"
            android:layout_width="112dp"
            android:layout_column="1"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

            <TextView android:text="Frequency"
            android:layout_width="112dp"
            android:layout_column="2"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</android.support.constraint.ConstraintLayout>